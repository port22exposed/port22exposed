---
import type { SimpleIcon } from "simple-icons"

interface Props {
    href: string
	icon: SimpleIcon
}
---

<style is:global>
	svg.social {
		vertical-align: middle;
		width: 2em;
		height: 2em;
	}
	@media (prefers-color-scheme: dark) {
		svg.social {
			fill: currentColor;
		}
	}
</style>

<a href={Astro.props.href} target="_blank" rel="me" class="u-url" style="display: block">
    <Fragment
        set:html={Astro.props.icon.svg.replace(
            `role="img"`,
            `role="img" width="32" height="32" class="social" fill="#${Astro.props.icon.hex}"`
        )}
    />
</a>